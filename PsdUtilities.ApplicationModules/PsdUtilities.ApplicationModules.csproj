<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<Version>2.2.0</Version>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>PsdUtilities.ApplicationModules</Title>
		<Description>Utility library for distributing the application bootstrap into seperate modules for the IServiceCollection and IHost.</Description>
		<PackageProjectUrl>https://github.com/psdlex/PsdUtilities.ApplicationModules</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/psdlex/PsdUtilities.ApplicationModules</RepositoryUrl>
		<PackageTags>modules;services;servicecollection;iservicecollection</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<Authors>psdlex</Authors>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="6.0.1" />
	</ItemGroup>

</Project>
